metadata_dir = "/var/lib/garage/meta"
data_dir = "/var/lib/garage/data"
db_engine = "lmdb"

metadata_auto_snapshot_interval = "6h"

replication_factor = 3
compression_level = 2


rpc_bind_addr = "[::]:3901"
rpc_public_addr = "{{ hostvars[inventory_hostname]['ansible_host'] }}:3901"
rpc_secret = "{{ secrets.rpc_secret }}"

[s3_api]
s3_region = "garage"
api_bind_addr = "[::]:3900"
root_domain = ".s3.{{ root_domain }}"

[s3_web]
bind_addr = "[::]:3902"
root_domain = ".web.{{ root_domain }}"
index = "index.html"

[k2v_api]
api_bind_addr = "[::]:3904"

[admin]
api_bind_addr = "[::]:3903"
admin_token = "{{ secrets.admin_token }}"
metrics_token = "{{ secrets.metrics_token }}"