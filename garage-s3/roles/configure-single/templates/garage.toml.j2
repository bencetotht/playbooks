metadata_dir = "/mnt/meta"
data_dir = "/mnt/data"
db_engine = "sqlite"

replication_factor = 1

rpc_bind_addr = "[::]:3901"
rpc_public_addr = "127.0.0.1:3901"
rpc_secret = "{{ secrets.rpc_secret }}"

[s3_api]
s3_region = "garage"
api_bind_addr = "[::]:3900"
root_domain = ".s3.{{ root_domain }}"

[s3_web]
bind_addr = "[::]:3902"
root_domain = ".web.{{ root_domain }}"
index = "index.html"

[k2v_api]
api_bind_addr = "[::]:3904"

[admin]
api_bind_addr = "[::]:3903"
admin_token = "{{ secrets.admin_token }}"
metrics_token = "{{ secrets.metrics_token }}"