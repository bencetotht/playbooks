extends: default

rules:
  # Ansible-specific rules
  line-length:
    max: 120
    level: warning
  
  # Allow document start
  document-start:
    present: false
    
  # Allow trailing spaces in templates
  trailing-spaces:
    level: warning
    
  # Indentation rules
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false
    
  # Comments
  comments:
    min-spaces-from-content: 1
    
  # Empty lines
  empty-lines:
    max: 2
    max-start: 0
    max-end: 1
    
  # Truthy values (allow yes/no for Ansible)
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no', 'on', 'off']
    check-keys: false
    
  # Quoted strings
  quoted-strings:
    quote-type: single
    check-keys: false
    
  # Brackets
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
    
  # Braces
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
    
  # Commas
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    
  # Colons
  colons:
    max-spaces-before: 0
    min-spaces-after: 1
    
  # Hyphens
  hyphens:
    max-spaces-after: 1
    
  # Key ordering
  key-ordering: disable
  
  # Octal values
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: false
    
  # Anchors
  anchors:
    max-length: 128
    
  # Key duplicates
  key-duplicates: enable
  
  # Key ordering
  key-ordering: disable
